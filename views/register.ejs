<%- include('partials/header') %>

<div class="container mx-auto px-4 py-8 max-w-md">
  <h1 class="text-2xl font-bold mb-4">Register</h1>
  <% if (error) { %>
    <div class="bg-red-100 text-red-700 p-2 mb-4 rounded"><%= error %></div>
  <% } %>
  <form method="POST" action="/register" class="space-y-4">
    <div>
      <label for="businessName" class="block mb-1">Business Name</label>
      <input type="text" name="businessName" id="businessName" required class="w-full border px-2 py-1 rounded" />
    </div>
    <div>
      <label for="username" class="block mb-1">Username</label>
      <input type="text" name="username" id="username" required class="w-full border px-2 py-1 rounded" />
    </div>
    <div>
      <label for="email" class="block mb-1">Email</label>
      <input type="email" name="email" id="email" required class="w-full border px-2 py-1 rounded" />
    </div>
    <div>
      <label for="password" class="block mb-1">Password</label>
      <input type="password" name="password" id="password" required class="w-full border px-2 py-1 rounded" />
    </div>
    <div>
      <label for="confirmPassword" class="block mb-1">Confirm Password</label>
      <input type="password" name="confirmPassword" id="confirmPassword" required class="w-full border px-2 py-1 rounded" />
    </div>
    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded">Register</button>
  </form>
  <p class="mt-4 text-center">Already have an account? <a href="/login" class="text-blue-600">Login here</a>.</p>
  <!-- Application version -->
  <p class="mt-2 text-center text-gray-500 text-sm">Version: <%= version %></p>
</div>