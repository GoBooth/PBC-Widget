<%- include('partials/header') %>
<div class="bg-gray-100 flex items-center justify-center min-h-screen">
  <div class="text-center p-6 bg-white rounded shadow-md space-y-4">
    <h1 class="text-5xl font-bold mb-4">Welcome to Photobooth Widget</h1>
    <p class="text-xl">Quickly configure and embed your photo widget.</p>
    <div class="space-x-4">
      <% if (!currentUser) { %>
        <a href="/register" class="px-4 py-2 bg-blue-600 text-white rounded">Register</a>
        <a href="/login" class="px-4 py-2 bg-gray-200 text-gray-800 rounded">Login</a>
      <% } else { %>
        <a href="/dashboard/widget" class="px-4 py-2 bg-blue-600 text-white rounded">Go to Dashboard</a>
      <% } %>
    </div>
  </div>
</div>